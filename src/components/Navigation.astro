---
const navigation = [
	{
		title: 'Art√≠culos',
		url: '/blog'
	},
	{
		title: 'Contacto',
		url: 'mailto:contacto@omarsantos.me'
	}
]
---

<section class='navigation mb-4 flex items-center justify-between py-4'>
	<h1 class='text-2xl'>
		<a
			href='/'
			title='Omar Santos'
			class='bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-4xl font-semibold text-transparent'
		>
			OS</a
		>
	</h1>

	<nav>
		<ul class='flex items-center gap-4'>
			{
				navigation.map((item) => (
					<li class='nav-item cursor-pointer rounded p-2 transition-colors hover:bg-gradient-to-r hover:from-indigo-500 hover:to-purple-500'>
						<a href={item.url} class='text-white'>
							{item.title}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
</section>

<script>
	const navItems = document.querySelectorAll('.nav-item')
	navItems.forEach((item) => {
		item.addEventListener('click', () => {
			const url = item.querySelector('a')?.href
			window.location.href = url || ''
		})
	})
</script>
