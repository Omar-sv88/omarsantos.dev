---
const { title, description, keywords, robots, locale, url, imageUrl, imageWidth, imageHeight } =
	Astro.props
---

<meta name="description" content={description} />
<meta name="author" content="Omar Santos" />
<meta name="keywords" content={keywords} />
<meta name="robots" content={robots} />
<meta name="googlebot" content={robots} />
<meta name="google" content="nositelinkssearchbox" />
<meta name="google" content="notranslate" />

<meta property="og:locale" content={locale} />
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:site_name" content={description} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:secure_url" content={imageUrl} />
<meta property="og:image:width" content={imageWidth} />
<meta property="og:image:height" content={imageHeight} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:description" content={description} />
<meta name="twitter:title" content={title} />
<meta name="twitter:image" content={imageUrl} />
<meta name="twitter:site" content="@omar_sv88" />
<meta name="twitter:creator" content="@omar_sv88" />
