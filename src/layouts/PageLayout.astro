---
import '../styles/global.css'

import SeoSection from '../components/SeoSection.astro'
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Omar Santos - Full Stack Developer</title>
		<link rel="canonical" href={`${Astro.site}`} />

		<SeoSection
			title="Omar Santos - Full Stack Developer"
			description="Omar Santos - Full Stack Developer"
			keywords="Omar Santos, Full Stack Developer, Web Developer, JavaScript, React, Node, Astro"
			robots="index, follow"
			locale="es_ES"
			imageUrl={`${Astro.site}assets/images/omarsantos.dev-og-image.jpg`}
			imageWidth="516"
			imageHeight="430"
			url={Astro.site}
		/>
	</head>
	<body class="bg-black">
		<main class="mx-auto px-4 md:max-w-5xl">
			<Navigation />

			<slot />

			<Footer />
		</main>
	</body>
</html>
